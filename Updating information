--Updating data
insert into 
F1.Pilots (Pilot_ID, Pilot_Name, Team_Name,Birth_Date,Podiums,Points,World_Championships)
values (020, 'Sergio Perez', 'Red Bull Racing', '2006-08-25', 0, 0, 0);
--The information of Sergio Perez isn't right, let's update it
update F1.Pilots
set Podiums = 39,World_Championships = 0,Points = 1638 
where Pilot_Name = 'Sergio Perez';
--Confirm the new information added
Select * 
from F1.Pilots;
